<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<TextView 
		android:id="@+id/timeIntervalHour"
		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
		android:hint="00"/>
	<TextView 
		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
		android:text=":"/>
	<TextView 
		android:id="@+id/timeIntervalMinute"
		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
		android:hint="00"/>
	<TextView 
		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
		android:text=":"/>
	<TextView 
		android:id="@+id/timeIntervalSecond"
		android:layout_width="wrap_content"
  		android:layout_height="wrap_content"
		android:hint="00"/>
</LinearLayout>
